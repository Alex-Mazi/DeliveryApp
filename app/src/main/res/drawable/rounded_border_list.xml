<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#7f98bded"/>

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="#b3fffe"/>

    <!-- Rounded corners -->
    <corners android:radius="10dp"/>  <!-- Rounded edges -->

    <!-- Padding inside the border -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>