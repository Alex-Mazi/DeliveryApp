<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#D3D3D3"/>

    <!-- Border color and width -->
    <stroke
        android:width="3dp"
        android:color="#FFFF"/>

    <!-- Rounded corners -->
    <corners android:radius="50dp"/>  <!-- Rounded edges -->

    <!-- Padding inside the border -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>